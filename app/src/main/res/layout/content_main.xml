                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Subsidiaries"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />


                &lt;!&ndash; <Button
                     android:layout_marginLeft="10dp"
                     android:layout_marginStart="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginTop="10dp"
                     android:text="More"
                     android:id="@+id/btn_MoreSubsidiaries"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     />&ndash;&gt;


            </LinearLayout>
-->
            <LinearLayout
                android:id="@+id/linear_Projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">



             <!--   <Button
                    android:id="@+id/btn_MoreProjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="More" />-->


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/about_us_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clients_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gallary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear_ourteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">




            </LinearLayout>

            <RelativeLayout
                android:id="@+id/contact_us_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
